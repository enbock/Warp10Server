#ifndef NETTRANSFERSIGNAL_
#define NETTRANSFERSIGNAL_

#include <Event>
#include <ByteArray>

namespace u
{
	/**
	 * Event protocol for data transfer.
	 * <p>This class contains all constants for the network transfer protocol in
	 * high level.</p>
	 */
	class NetTransferEvent : public Event
	{
		protected:
			/**
			 * Id of transfer.
			 */
			uint64 _id;

			/**
			 * Datablock.
			 */
			ByteArray _data;

		public:
			/**
			 * Begin of transfer.
			 * <p>This event starts the network transfer.</p>
			 */
			static const String INIT;

			/**
			 * Ready to start/receive transfer.
			 * <p>The ready event to receive the transfer. The receiver send
			 * this event and the sender receive it and begins after direct with
			 * sending data.</p>
			 */
			static const String READY;

			/**
			 * Transfer data to network or receive data from network.
			 * <p>This data event put the data from the module to the network
			 * connection(in the max size of connection can control).<br>
			 * On receiver side is this event the received data block and is sent
			 * to handler/program.</p>
			 */
			static const String DATA;

			/**
			 * End of transfer.
			 * <p>The sender side event the finishing of the transfer. The receiver
			 * inform the program about rthe finishing.<br>
			 * This is the end of the transfer progress.</p>
			 */
			static const String EOT;

			/**
			 * Constructor to create the event.
			 * <p>The data object will be copied.</p>
			 * @param type The type of event.
			 */
			NetTransferEvent(String const& type, uint64 id = 0, ByteArray *data = null);

			/**
			 * Destructor.
			 */
			~NetTransferEvent();

			/**
			 * Class name.
			 * @return The class name as String.
			 */
			String className();

			/**
			 * Destroy this network event object.
			 */
			void destroy();

			/**
			 * Get the id of the transfer.
			 * @return The transfer id.
			 */
			uint64 id();

			/**
			 * Clone this event.
			 */
			Event* clone();

			/**
			 * Get the pointer of the datablock.
			 */
			ByteArray* data();

			/**
			* Info dumper.
			*/
			virtual String toString();
	};
}

#endif /* NETTRANSFERSIGNAL_ */
